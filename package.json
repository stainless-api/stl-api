    "lodash": "^4.17.21",
    "pkg-up": "3.1",
    "resolve": "^1.22.2",
    "ts-morph": "^19.0.0",
    "ts-to-zod": "github:stainless-api/stl-api#ts-to-zod-0.0.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.66",
    "@types/debug": "^4.1.8",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
